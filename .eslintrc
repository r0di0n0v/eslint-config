{
    "extends": "airbnb-base",
    "rules": {
        "indent": 0,
        "prefer-destructuring": ["error", {
            "array": false,
            "object": true
        }],
        "arrow-body-style": ["error", "always"],
        "no-shadow": ["error", {
            "allow": ["err", "error", "reply"]
        }],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "spaced-comment": ["error", "always", { "exceptions": ["language=Oracle"] }]
    }
}
